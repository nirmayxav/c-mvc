@model IEnumerable<ImageModel>

<div class="container">
    <h2 class="text-center">Image Gallery</h2>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="thumbnail">
                    <img src="data:@item.ContentType;base64,@Convert.ToBase64String(item.ImageData)" alt="@item.Title" class="img-fluid" />
                    <div class="caption text-center">
                        <h4>@item.Title</h4>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="text-center">
        <a asp-action="Create" class="btn btn-primary">Add New Image</a>
    </div>
</div>
